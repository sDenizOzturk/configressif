{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:raw": "tsc -b && vite build",
    "build": "npm run build:raw && vite build && npm run post-build",
    "post-build": "npm run post-build:static-files && npm run post-build:default-configs",
    "post-build:static-files": "mkdir -p ../workbench/data/public && mv ../workbench/data/index.html ../workbench/data/public/",
    "post-build:default-configs": "mkdir -p ../workbench/data/default && cp -r ./private/static-defaults/* ../workbench/data/default/",
    "dev": "concurrently -k \"npm:dev:dummy\" \"vite\"",
    "dev:dummy": "npm --prefix ../dummy-server run dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "start:frontend": "vite preview --port 5173",
    "start:dummy-server": "tsc -p ../dummy-server && node ../dummy-server/dist/index.js",
    "start:full": "concurrently -k \"npm run start:dummy-server\" \"npm run start:frontend\"",
    "test:e2e": "start-server-and-test start:full http://localhost:5173 \"playwright test\"",
    "test": "npm run pre-test && npm run test:e2e",
    "pre-test": "npm run build:raw && npx playwright install chromium"
  },
  "dependencies": {
    "connect-history-api-fallback": "^2.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.1",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4"
  }
}
